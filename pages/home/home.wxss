/* pages/home/home.wxss */
page {
  background-color: #f4f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.wrap{
  width: 100%;
  max-height: calc(100% - 160rpx);
  padding: 80rpx 0;
  overflow: auto;
  text-align: center;
}
.header{
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.headerIcon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* background-color: skyblue; */
  overflow: hidden;
}
.headerIcon image{
  width: 120rpx;
  height: 120rpx;
}
.headerName{
  color: #01346b;
  font-size: 30rpx;
  margin: 16rpx auto;
}
.subtitle{
  color: #666;
  font-size: 26rpx;
  font-family: cursive;
}
.subtitle::after{
  content: "|";
  margin-left: 6rpx;
}
.list{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
.item{
  width: calc(45% - 60rpx);
  box-shadow: 0 10rpx 20rpx 0 rgba(21, 21, 21, 0.15);
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  background-color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.icon,.icon image{
  width: 100rpx;
  height: 100rpx;
}
.tit{
  /* font-size: 30rpx; */
  color: #333;
  margin: 8rpx auto;
  font-family: serif;
}
.desc{
  font-size: 26rpx;
  color: #999;
}
.block{
  width: 45%;
}
.bottom{
  position: absolute;
  bottom: 0;
  width: 100%;
  color: #888;
  font-size: 26rpx;
  text-align: center;
  font-family: fangsong;
  line-height: 80rpx;
  background-color: #f4f5f9;
}