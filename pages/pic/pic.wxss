/* pages/pic/pic.wxss */
.wrap{
  width: 100%;
  height: 100%;
  position: absolute;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
}
.conBox{
  width: 100%;
  height: calc(100% - 170rpx);
  background-color: #fff;
  border-radius: 0 0 15rpx 15rpx;
  position: absolute;
  top: 0;
}
.tit{
  width: 100%;
  border-bottom: 2rpx solid #f2f2f2;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.n{
 margin-left: 2.5%; 
}
.c{
  margin-right: 2.5%;
}
.scroll{
  width: 100%;
  height: calc(100% - 82rpx);
}
.txt{
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 15rpx;
}
.txt:last-child{
  margin-bottom: 15rpx;
}
.none{
  text-align: center;
  margin-top: 30rpx;
  color: #999;
}
.btn{
  width: 50%;
  position: absolute;
  line-height: 80rpx;
  border-radius: 20rpx;
  background-color: #1989fa;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  color: #fff;
  text-align: center;
}